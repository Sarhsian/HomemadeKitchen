@using Microsoft.AspNetCore.Identity
@using CasualShop.Areas.Identity.Data

@inject SignInManager<CasualShopUser> SignInManager
@inject UserManager<CasualShopUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Shop", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-light">Вийти</button>
        </form>
    </li>
        @if (UserManager.GetUserId(User) == "a121b06b-064d-4fe5-9c2d-9647efa12bd7")
        {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Admin" asp-action="Index" title="Admin">Панель Адміністратора</a>
        </li>
        }
    }
    else
    {
    <li class="nav-item">
        <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Реєстрація</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
    </li>
}
</ul>
